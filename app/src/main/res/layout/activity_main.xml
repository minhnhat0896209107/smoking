<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/anhnen"
    tools:context=".MainActivity">

    <ImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/smoking"/>
    <TextView
        android:text="USERNAME"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#FFEB3B"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:text="username"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:text="PASSWORD"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#FFEB3B"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />

    <EditText
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="password"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/tv_forgot"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"/>

    <Button
        android:id="@+id/btn_dangnhap"
        android:text="GET STARTING"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@drawable/bogoc_vang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_dangky"
        android:text="Not registered? Create Account"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:background="@drawable/bogoc_xam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>