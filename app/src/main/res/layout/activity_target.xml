<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_backtarget"
            android:layout_margin="20dp"
            android:src="@drawable/back1"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:textSize="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add target"/>
    </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:background="@drawable/bogoc_nenxam"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="-- Choose your target--"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="#F24"
        android:text="Start date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_margin="10dp"
        android:background="@drawable/bogoc_nenxam"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:text="21/07/2000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginStart="20dp"
        android:textSize="30sp"
        android:textColor="#F24"
        android:text="End date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp" />
    <TextView
        android:layout_margin="10dp"
        android:background="@drawable/bogoc_nenxam"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Count of cigarette"
        android:textColor="#F24"
        android:textSize="30sp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_margin="10dp"
        android:background="@drawable/bogoc_nenxam"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_margin="10dp"
        android:background="@drawable/bogoc_nenvang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"/>

</LinearLayout>